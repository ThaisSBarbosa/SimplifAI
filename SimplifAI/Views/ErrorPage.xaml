<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SimplifAI.Views.ErrorPage"
    BackgroundColor="#66FEFEFE">

    <ContentPage.Content>
        


        <StackLayout x:Name="telaErro" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped"
                              NumberOfTapsRequired="1" />
            </StackLayout.GestureRecognizers>
            <Image x:Name="imagemErro" />
            <Label Style="{StaticResource LabelBold}"  x:Name="textoErro" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
   
</ContentPage>