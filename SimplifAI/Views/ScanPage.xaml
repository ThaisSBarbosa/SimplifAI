<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SimplifAI.Views.ScanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SimplifAI.ViewModels"
    Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:ScanViewModel />
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <StackLayout
            Padding="30,24,30,24"
            Orientation="Vertical"
            Spacing="10">

            <StackLayout VerticalOptions="Start">
                <Button
                    x:Name="BtnCapturarCamera"
                    Clicked="BtnCapturarCamera_Clicked"
                    HeightRequest="50"
                    Text="Capturar foto com câmera" />
                <Label Margin="0,20,0,0" Text="Fotos capturadas:" />



            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button
                    x:Name="BtnSimplifAI"
                    Clicked="BtnSimplifAI_Clicked"
                    HeightRequest="50"
                    Text="SimplifAI" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>