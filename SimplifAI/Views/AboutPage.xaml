<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SimplifAI.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SimplifAI.ViewModels"
    Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary />
    </ContentPage.Resources>
    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout
                BackgroundColor="#F6F3ED"
                HorizontalOptions="Fill"
                VerticalOptions="FillAndExpand">
                <StackLayout
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="Center">
                    <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                        <Image
                            HeightRequest="100"
                            Source="SmartVeredict.png"
                            VerticalOptions="Center" />
                    </ContentView>
                </StackLayout>
            </StackLayout>
            <ScrollView Grid.Row="1">
                <StackLayout
                    Padding="30,10,0,10"
                    Orientation="Vertical"
                    Spacing="10">
                    <Label
                        FontSize="Title"
                        Style="{StaticResource LabelDestaque}"
                        Text="SMART VEREDICT" />
                    <Label
                        Padding="0,0,0,0"
                        FontSize="16"
                        Text="Algum texto interessante que explique o que a gente faz." />
                    <Label
                        Padding="0,0,0,0"
                        FontSize="16"
                        Text="Blah, Blah, Blah, Blah, Blah, Blah" />
                </StackLayout>
            </ScrollView>
            <ScrollView Grid.Row="2">
                <StackLayout
                    Padding="30,10,0,10"
                    Orientation="Vertical"
                    Spacing="10">
                    <Label
                        FontSize="Title"
                        Style="{StaticResource LabelDestaque}"
                        Text="O OBJETIVO" />
                    <Label
                        Padding="0,0,0,0"
                        FontSize="16"
                        Text="Fazer a gente ficar doida" />
                </StackLayout>
            </ScrollView>
            <ScrollView Grid.Row="3">
                <StackLayout
                    Padding="30,10,0,10"
                    Orientation="Vertical"
                    Spacing="10">
                    <Label
                        FontSize="Title"
                        Style="{StaticResource LabelDestaque}"
                        Text="O TIME" />
                    <Label
                        Padding="0,0,0,0"
                        FontSize="16"
                        Text="Três malucas." />
                </StackLayout>
            </ScrollView>
        </Grid>
        <Label
            Padding="0,10,0,10"
            FontSize="16"
            HorizontalTextAlignment="Center"
            VerticalOptions="EndAndExpand">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span FontSize="10" Text="Designed by: " />
                        <Span
                            FontSize="12"
                            Style="{StaticResource LabelBold}"
                            Text="Marias ♥ " />
                        <Span FontSize="10" Text="(2023)" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>
</ContentPage>
